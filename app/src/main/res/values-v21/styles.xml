<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="HiddenStatusBar" parent="AppTheme.NoActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:colorControlNormal">@color/colorAccent</item>
        <item name="android:colorControlActivated">@color/colorPrimary</item>
    </style>
    <style name="MyProgressBar" parent="Base.Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:indeterminateTint">@color/colorPrimary</item>
        <item name="android:indeterminateTintMode">src_atop</item>
    </style>
</resources>