<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardCornerRadius="4dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">


    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/iv_plan"
            android:layout_width="100dp" android:layout_height="100dp"
            app:srcCompat="@drawable/login_bg2"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_margin="8dp"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
        />
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="计划名称"
                  android:textColor="@android:color/black"
                  android:textSize="16sp"
                  app:layout_constraintTop_toTopOf="parent"
                  app:layout_constraintBottom_toBottomOf="parent"
                  app:layout_constraintLeft_toRightOf="@+id/iv_plan"
                  android:layout_marginLeft="8dp"
                  android:layout_marginStart="8dp"
                  android:layout_marginTop="8dp"
                  android:layout_marginRight="8dp"
                  android:layout_marginEnd="8dp"
                  android:layout_marginBottom="8dp"
                  app:layout_constraintRight_toRightOf="parent"
                  app:layout_constraintVertical_bias="0.296"
                  android:id="@+id/tv_plan_name" app:layout_constraintHorizontal_bias="0.094"/>
        <TextView android:id="@+id/tv_plan_state"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginBottom="8dp"
                  android:layout_marginLeft="8dp"
                  android:layout_marginTop="8dp"
                  android:text="未开始"
                  android:textSize="16sp" app:layout_constraintBottom_toBottomOf="parent"
                  app:layout_constraintLeft_toRightOf="@+id/iv_plan"
                  app:layout_constraintTop_toBottomOf="@+id/tv_plan_name"
                  app:layout_constraintVertical_bias="0.733"/>
    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>