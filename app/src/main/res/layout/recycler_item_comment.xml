<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="4dp">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/rl_lecturer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
    >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_answer"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/login_bg2"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/tv_answer_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_answer"
            android:layout_alignTop="@+id/iv_answer"
            android:layout_marginLeft="12dp" android:layout_marginTop="16dp"
            android:layout_toEndOf="@+id/iv_answer"
            android:layout_toRightOf="@+id/iv_answer"
            android:text="123456小王" android:textSize="10sp"
            app:layout_constraintLeft_toRightOf="@+id/iv_answer"
            app:layout_constraintTop_toTopOf="parent"/>

        <com.athkalia.emphasis.EmphasisTextView
            android:id="@+id/tv_answer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_answer"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:text="PS里的切片工具在哪？"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@+id/iv_answer"
            app:layout_constraintLeft_toRightOf="@+id/iv_answer"/>
        <TextView
            android:id="@+id/tv_answer_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="24dp"
            android:layout_marginEnd="24dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="8dp"
            android:text="2017-07-07"
            app:layout_constraintTop_toTopOf="parent"/>
    </android.support.constraint.ConstraintLayout>


</android.support.v7.widget.CardView>