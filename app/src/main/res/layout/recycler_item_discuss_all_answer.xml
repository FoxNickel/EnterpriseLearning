<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="4dp">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/rl_lecturer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
    >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_questioner"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/login_bg2"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/tv_answer_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_questioner"
            android:layout_alignTop="@+id/iv_questioner"
            android:layout_marginLeft="8dp" android:layout_marginTop="8dp"
            android:layout_toEndOf="@+id/iv_questioner"
            android:layout_toRightOf="@+id/iv_questioner"
            android:text="慕神" android:textSize="10sp"
            app:layout_constraintLeft_toRightOf="@+id/iv_questioner"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/tv_answer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_questioner"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:text="PS里有切片工具"
            android:textSize="16sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_questioner"
        />
        <View
            android:id="@+id/view_divider3"
            android:layout_width="0dp"
            android:layout_height="0.5dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/red_line_gradient"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_answer"/>
        <ImageView
            android:id="@+id/iv_good"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view_divider3"
            android:background="@drawable/ic_thumbs_up_gray"/>
        <TextView
            android:id="@+id/tv_good_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="15dp"
            android:text="1"
            app:layout_constraintLeft_toRightOf="@+id/iv_good"
            app:layout_constraintTop_toBottomOf="@id/view_divider3"/>
        <ImageView
            android:id="@+id/iv_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/view_divider3"
            app:srcCompat="@drawable/ic_comment_gray"
            android:layout_marginRight="62dp" app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="15dp"/>
        <TextView
            android:id="@+id/tv_comment_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="15dp"
            android:text="0"
            app:layout_constraintLeft_toRightOf="@+id/iv_comment"
            app:layout_constraintTop_toBottomOf="@id/view_divider3"/>
    </android.support.constraint.ConstraintLayout>


</android.support.v7.widget.CardView>